<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appenza.classroom" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AuroraClass</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="cordova-custom-config-autorestore" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-manifest/application/activity[@android:name='MainActivity']/intent-filter/category/@android:name" value="android.intent.category.APP_BROWSER" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="com.appenza.cordova.plugins.classroom" spec="https://github.com/appenza/cordova-class-plugin.git" />
    <plugin name="cordova-custom-config" spec="^1.1.9" />
    <plugin name="cordova-plugin-console" spec="^1.0.2" />
    <plugin name="cordova-plugin-file" spec="^3.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.2.0" />
</widget>
